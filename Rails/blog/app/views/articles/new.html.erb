<h4>New Article</h4>
<br/>
<%= form_for :article, url: articles_path do |f| %>

	<% if @article.errors.any? %>
		<div id = "error_explaination">
			<h2><%= pluralize(@articles.errors.count, "errors") %> prevented the article from being saved:</h2>
			<ul>
				<% articles.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<%end%>
			</ul>
		</div>
	<%end%>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>