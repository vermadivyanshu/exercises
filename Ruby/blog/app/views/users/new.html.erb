<h1>Sign Up!</h1>
<%= form_for @user, url: users_path do |f| %>
	
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>

	<p>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</p>

	<p>
    	<%= f.submit("Create User") %>
  	</p>

  	<p>
	<%= link_to 'Login', login_users_path %>
</p>

<%end%>


